<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="700" prefWidth="600" spacing="15" styleClass="form-container" stylesheets="@form-style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="doanJava.Controller.AddRecipeController">

    <Label styleClass="form-title" text="Tạo Công Thức Mới" />

    <VBox spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-background-radius: 10;">
        <Label style="-fx-font-weight: bold;" text="1. Thông tin chung" />
        <TextField fx:id="txtFoodName" promptText="Tên món ăn (Ví dụ: Bò kho)" />
        <TextArea fx:id="txtInstruction" prefHeight="80" promptText="Hướng dẫn chế biến..." wrapText="true" />
    </VBox>

    <VBox spacing="10" VBox.vgrow="ALWAYS">
        <Label style="-fx-font-weight: bold;" text="2. Thành phần nguyên liệu" />
        
        <HBox alignment="CENTER_LEFT" spacing="10">
            <ComboBox fx:id="cbIngredients" prefWidth="200" promptText="Chọn nguyên liệu..." />
            <TextField fx:id="txtQuantity" prefWidth="80" promptText="Số lượng" />
            <Label fx:id="lblUnit" style="-fx-text-fill: gray;" text="đơn vị" />
            <Button fx:id="btnAddIngredient" styleClass="btn-primary" text="+" />
        </HBox>

        <TableView fx:id="tblRecipeIngredients" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colName" prefWidth="200" text="Nguyên Liệu" />
                <TableColumn fx:id="colQty" prefWidth="100" text="Số Lượng" />
                <TableColumn fx:id="colUnit" prefWidth="80" text="Đơn Vị" />
                <TableColumn fx:id="colAction" prefWidth="80" text="Xóa" />
            </columns>
            <placeholder>
                <Label text="Chưa có nguyên liệu nào" />
            </placeholder>
        </TableView>
    </VBox>

    <Separator />

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button fx:id="btnCancel" styleClass="btn-secondary" text="Hủy" />
        <Button fx:id="btnSaveAll" prefHeight="40" prefWidth="200" styleClass="btn-primary" text="HOÀN TẤT &amp; LƯU" />
    </HBox>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>

</VBox>
